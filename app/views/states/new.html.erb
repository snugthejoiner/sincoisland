 <h1>New State</h1>
 
  <div class="row">
    <div class="col-md-12">
      <%= form_for @state do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter the name of the State" %>
        </div>
        <div class="form-group">
          <%= f.label :population %>
          <%= f.number_field :population, class: 'form-control', placeholder: "Choose a number between 5,000 and 1,000,000", in: 5000..1000000, step: 5000 %>
        </div>
        <div class="form-group">
          <%= f.label 'X Coordinate'%>
          <%= f.select :x, options_for_select(1..10), class: 'form-control'%>
          <%= f.label 'Y Coordinate'%>
          <%= f.select :y, options_for_select(1..10), class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :note %>
          <%= f.text_area :note, rows: 5, placeholder: "Leave a note or a comment", class: 'form-control'%>
        </div>
 
    <%= f.submit "Save", class: 'btn btn-success'  %>
  </div>
</div>

<% end %>