<h1><%= @state.name %></h1>
 
<div class="row">
  <div class="col-md-12">
    <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Population: <%= number_with_delimiter(@state.population) %></p>
    <p><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Coordinates: <%= @state.x %> - <%= @state.y %></p>
    <p><%= markdown_to_html(@state.note) %></p>
  </div>
</div>
     <% @state.counties.each do |county| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
 <!-- #39 -->
             <%= link_to county.name, state_county_path(@state, county) %>
           </h4>
         </div>
       </div>
     <% end %>
<hr>
<div class="row">
  <div class="col-md-12">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Edit ", edit_state_path(@state)%>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <%= link_to "Delete ", @state, method: :delete, data: {confirm: 'Are you sure you want to delete this State?'} %>
      <span class="glyphicon glyphicon-print" aria-hidden="true"></span>  <%= link_to "New County", new_state_county_path(@state) %>
    </div>
  </div>
</div>