<h1>Edit County</h1>
 
<div class="row">
  <div class="col-md-12">
    <%= form_for [@state, @county] do |f| %>
      <div>
        <%= f.label :state %>
        <%= f.collection_select :state_id, State.order(:name),:id,:name, include_blank: false %>
      </div>
      <div>
        <%= f.label :county %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter the name of the County" %>
      </div>
      <div class="form-group">
        <%= f.label :population %>
        <%= f.number_field :population, class: 'form-control', placeholder: "Choose a number between 500 and 30,000", in: 500..30000, step: 'any' %>
      </div>
      <div class="form-group">
        <%= f.label :note %>
        <%= f.text_area :note, rows: 5, placeholder: "Leave a note or a comment", class: 'form-control'%>
      </div>
 
      <%= f.submit "Save", class: 'btn btn-success'  %>
  </div>
 </div>

 <% end %>