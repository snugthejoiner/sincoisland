<h1><%= @county.name %></h1>
 
<div class="row">
  <div class="col-md-12">
    <p><span class="glyphicon glyphicon-print" aria-hidden="true"></span> State: <%= link_to @county.state.name, @state %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Population: <%= number_with_delimiter(@state.population) %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% @county.localities.each do |locality| %><p><span class="glyphicon glyphicon-knight" aria-hidden="true"></span> Locality: <%= link_to locality.name, state_county_locality_path(@state, @county, locality) %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p><%= markdown_to_html(@county.note) %></p>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-12">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Edit", edit_state_county_path(@state, @county)%>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <%= link_to "Delete", state_county_path(@state, @county), method: :delete, data: {confirm: 'Are you sure you want to delete this county?'} %>
   </div>  
</div>
<hr>
<div class="row">
    <div class="col-md-12">
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  <%= link_to "Create New City or Town", new_state_county_locality_path(@state, @county) %>
    </div>
  </div>

  <br>