<h1><%= @locality.name %></h1>
 
<div class="row">
  <div class="col-md-4">
    <p><span class="glyphicon glyphicon-print" aria-hidden="true"></span> State: <%= link_to @locality.county.state.name, @state %></p>
  </div>
  <div class="col-md-8">
    <p><span class="glyphicon glyphicon-lamp" aria-hidden="true"></span> County: <%= link_to @locality.county.name, [@state, @county] %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Population: <%= number_with_delimiter(@locality.population) %></p>
  </div>
    <div class="col-md-8">
    <p><span class="glyphicon glyphicon-knight" aria-hidden="true"></span> <%= @locality.locality_type %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12"
    <p><%= markdown_to_html(@locality.note) %></p>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-12">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Edit", edit_state_county_locality_path(@state, @county, @locality)%>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <%= link_to "Delete", state_county_path(@state, @county, @locality), method: :delete, data: {confirm: 'Are you sure you want to delete this town or city?'} %>
   </div>  
</div>

</div>

<br>